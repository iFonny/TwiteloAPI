    "start": "node app.js"
  },
  "apps": [
    {
      "name": "twitelo-api-dev",
      "script": "./app.js",
      "watch": true,
      "restart_delay": 1000,
      "ignore_watch": [
        "node_modules",
        "logs/*",
        "public/*",
        "*.log",
        ".git"
      ],
      "log_date_format": "YYYY-MM-DD HH:mm Z",
