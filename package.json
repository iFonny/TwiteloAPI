      "env": {
        "NODE_ENV": "prod"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "root",
      "host": "51.254.118.165",
      "ref": "origin/master",
      "repo": "git@github.com:iFonny/TwiteloAPI.git",
      "path": "/home/root/www/production/",
      "ssh_options": [
